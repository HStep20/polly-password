{
  "manifest_version": 2,
  "name": "Polly Password",
  "description": "A pasword generator for your internet security needs",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },

  "background": {
    "scripts": [
      "./script.js"
    ]
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*/"
      ],
      "js": [
        "./script.js"
      ]
    }
  ],

  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "./index.html",
    "default_title": "Polly Password"
  }
}

